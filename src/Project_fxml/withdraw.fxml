<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project_Controller.WithdrawController">
   <children>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="회 원 탈 퇴" textFill="#2f2f2f">
               <font>
                  <Font name="Malgun Gothic Bold" size="15.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <Pane prefHeight="20.0" prefWidth="250.0" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="ID " textFill="#2f2f2f" />
                  <PasswordField fx:id="input_pw" prefHeight="25.0" prefWidth="151.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="PW" textFill="#2f2f2f" />
                  <PasswordField fx:id="input_pw_re" prefHeight="25.0" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnWithDraw" mnemonicParsing="false" text="탈퇴" textFill="#2f2f2f">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="btnCancel" mnemonicParsing="false" text="취소" textFill="#2f2f2f">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
