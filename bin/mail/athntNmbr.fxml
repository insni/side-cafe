<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<!-- jdbc_connection.EMailVerification 의 FX파일-->

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mail.athntNmbrRL">
	<children>
      <Label text="인증번호가 전송되었습니다.">
         <font>
            <Font name="Malgun Gothic Bold" size="16.0" />
         </font>
      </Label>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      	<image>
      		<Image url="@images/mail.png" />
      	</image>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ImageView>
		<Label fx:id="label">
         <font>
            <Font size="20.0" />
         </font></Label>
		<TextField fx:id="txtField" alignment="CENTER">
			<VBox.margin>
				<Insets />
			</VBox.margin>
		</TextField>
		<Button mnemonicParsing="false" onAction="#clickBtn" prefHeight="50.0" prefWidth="50.0" style="-fx-border-radius: 20;" text="확인">
         <font>
            <Font name="Malgun Gothic Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin></Button>
	</children>
   <padding>
      <Insets bottom="40.0" left="60.0" right="60.0" top="40.0" />
   </padding>
</VBox>
